<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.PhotosFragmentDate">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

    <TextView
        android:id="@+id/date_text_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dd/mm/yyyy"
        android:textSize="18sp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="10dp"
        android:paddingRight="10dp" />

    <com.example.progallery.helpers.ExpandableHeightGridView
        android:id="@+id/date_grid_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="180dp"
        android:gravity="center"
        android:numColumns="auto_fit"
        android:stretchMode="spacingWidthUniform"
        android:verticalSpacing="10dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/date_text_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dd/mm/yyyy"
        android:textSize="18sp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="10dp"
        android:paddingRight="10dp" />

    <com.example.progallery.helpers.ExpandableHeightGridView
        android:id="@+id/date_grid_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="180dp"
        android:gravity="center"
        android:numColumns="auto_fit"
        android:stretchMode="spacingWidthUniform"
        android:verticalSpacing="10dp"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/date_text_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dd/mm/yyyy"
        android:textSize="18sp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="10dp"
        android:paddingRight="10dp" />

    <com.example.progallery.helpers.ExpandableHeightGridView
        android:id="@+id/date_grid_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="180dp"
        android:gravity="center"
        android:numColumns="auto_fit"
        android:stretchMode="spacingWidthUniform"
        android:verticalSpacing="10dp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>